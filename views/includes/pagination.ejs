<section class="pagination">
    <% if(currentPage != 1 && previousPage!==1){%>  <a class="active" href="/?page=1">1</a> <%}%>
    <!-- <a href="/?page=<%= currentPage%>"> <%= currentPage%> </a> -->
    <% if(hasPreviousPage){%>
          <a href="/products/?page=<%= previousPage%>"><%=previousPage%></a> 
          <%}%>
    <% if(hasNextPage){%>  
        <a  href="/products/?page=<%= nextPage%>"><%= nextPage%></a>
         <%}%>
    <% if(lastPage!= currentPage && nextPage != lastPage){%>  
        <a  href="/products/?page=<%= lastPage%>"><%= lastPage%></a> 
         <%}%>
</section>